<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>XX后台管理系统</title>
  <link rel="stylesheet" href="/lib/bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/reset.css">
  <link rel="stylesheet" href="/css/common.css">
  <link rel="stylesheet" href="/css/index.css">
  <link rel="stylesheet" href="/css/phoneManage.css">
</head>

<body>
  <div class=" box">
    <div class="head_nav">
      <span>XXX后台管理系统</span>
      <ul class="nav nav-pills">
        <li class="list shouye_list">
          <a href="/login.html">退出</a>
        </li>
        <li class="list shouye_list">
          <%- include('./common/welcome') %>
        </li>
      </ul>

    </div>
    <div class="main shouye_main">
      <div class="row">
        <!-- <%- include('./common/left') %> -->
        <div class="col-md-3 col3">
          <ul class="nav nav-pills nav-stacked">
            <!-- <li class="list">
                  <a href="/users">
                      <i class="glyphicon glyphicon-user"></i>&nbsp;&nbsp; 用户管理
                  </a>
              </li> -->
            <%- include('./common/left') %>
              <li class="list">
                <a href="/phone">
                  <i class="glyphicon glyphicon-phone"></i>&nbsp;&nbsp; 手机管理
                </a>
              </li>
              <li class="list">
                <a href="/brand">
                  <i class="glyphicon glyphicon-file"></i>&nbsp;&nbsp; 品牌管理
                </a>
              </li>
          </ul>
        </div>
        <div class="col-md-9">
          <div class="welcome">
            <button type="button" id="btnX" class="btn btn-primary btn-lg active">新增手机</button>
            <table class=" table table-bordered">
              <thead>
                <tr>
                  <th>序号</th>
                  <th>图片</th>
                  <th>手机名称</th>
                  <th>手机品牌</th>
                  <th>官方指导价</th>
                  <th>二手回收价</th>
                  <th>操作</th>
                </tr>
              </thead>
              <tbody>
                <% for(var i = 0 ; i < list.length ; i++){ %>
                  <tr>
                    <th scope="row">
                      <%= i+1%>
                    </th>
                    <td>
                      <img src="<%= list[i].filename%>" alt="">
                    </td>
                    <td>
                      <%= list[i].phoneName%>
                    </td>
                    <td>
                      <%= list[i].phoneBrand%>
                    </td>
                    <td>
                      <%= list[i].phonePrice%>
                    </td>
                    <td>
                      <%= list[i].phonePrice2%>
                    </td>
                    <td>
                      <a href="#" class="xiugai">修改</a>/
                      <a href="/phone/delete?filename=<%= list[i].filename%>">删除</a>
                    </td>
                  </tr>
                  <% } %>

                    <!--   <tr>
                    <th scope="row">1</th>
                    <td>Mark</td>
                    <td>Otto</td>
                    <td>@mdo</td>
                    <td>Mark</td>
                    <td>Otto</td>
                    <td>@mdo</td>
                  </tr> -->
              </tbody>
            </table>
            <!-- //这里是新增手机信息表 -->
            <form action="/phone/newPhone" class="form_xin" method="POST" enctype="multipart/form-data">
              <div class="little_title">新增手机</div>
              <div class="user_reg">
                <span>名称:&nbsp;&nbsp;&nbsp;</span>
                <input type="text" name="name">
              </div>
              <div class="user_reg">
                <span>品牌:&nbsp;&nbsp;&nbsp;</span>
                <input type="text" name="brand">
              </div>
              <div class="user_reg">
                <span>官方指导价:</span>
                <input type="text" name="price">
              </div>
              <div class="user_reg ">
                <span>二手回收价:</span>
                <input type="text" name="price2">
              </div>
              <div class="user_reg">
                <!-- 上传图片，用form表单，需要将enctype属性 设置为：multipart form -data -->

                <span>图片:&nbsp;&nbsp;&nbsp;</span>
                <input type="file" name="file" style="margin-top: 10px; ">
                <!-- <input type="text " class="imgSrc " style="margin-top:10px; "> -->
                <!-- <input type="submit " value="上传 "> -->
              </div>
              <input type="submit" value="确定" style="background-color: #3b5561; ">
              <input type="button" id="quxiao" value="取消 " style="background-color: #3b5561; ">
            </form>



            <!-- 这里是修改手机信息表 -->
            <form action="/phone/update" class="form_xiu " method="POST" enctype="multipart/form-data">
              <div class="little_title">修改手机信息</div>
              <div class="user_reg ">
                <span>名称:&nbsp;&nbsp;&nbsp;</span>
                <input type="text" name="name" id="name">
              </div>
              <div class="user_reg">
                <span>品牌:&nbsp;&nbsp;&nbsp;</span>
                <input type="text" name="brand" id="brand">
              </div>
              <div class="user_reg">
                <span>官方指导价:</span>
                <input type="text" name="price" id="price">
              </div>
              <div class="user_reg">
                <span>二手回收价:</span>
                <input type="text " name="price2" id="price2">
              </div>
              <div class="user_reg">
                <!-- 上传图片，用form表单，需要将enctype属性 设置为：multipart form -data -->

                <span>图片:&nbsp;&nbsp;&nbsp;</span>
                <input type="file" name="file" style="margin-top: 10px; ">
                <input type="text" class="imgSrc" name="imgSrc" style="margin-top: 10px;display: none;">
                <!-- <input type="submit" value="上传 "> -->
              </div>
              <input type="submit" value="确定 " style="background-color: #3b5561; ">
              <input type="button" id="quxiao" value="取消 " style="background-color: #3b5561; ">
            </form>
            <nav aria-label="Page navigation ">
              <ul class="pagination ">
                <li>
                  <a href="/phone?page=<%=curPage-1<1?1:curPage-1%>&pageSize=<%= pageSize%>  " aria-label="Previous ">
                    <span aria-hidden="true ">&laquo;</span>
                  </a>
                </li>
                <!-- 总条数/每页条数 == 需要显示出来的总页数：totalPage    -->
                <% for(var i = 0 ; i < totalPage ;i++){%>
                  <li class="<%= curPage ==(i+1) ? 'active' : " "%>">
                    <a href="/phone?page=<%= i+1%>&pageSize=<%= pageSize%>">
                      <%= i+1%>
                    </a>
                  </li>
                  <% } %>

                    <li>
                      <a href="/phone?page=<%=curPage+1>totalPage?totalPage:curPage+1%>&pageSize=<%=pageSize%>" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                      </a>
                    </li>
              </ul>
            </nav>
          </div>
        </div>
      </div>
    </div>
    <%- include('./common/foot') %>
  </div>

</body>

</html>
<script src="https://cdn.bootcss.com/jquery/1.8.3/jquery.min.js"></script>
<script src="/js/phone.js "></script>